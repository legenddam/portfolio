{{#if projects}}
<table class="table table-stripeed">
    <tr>
        <th></th>
        <th>ID</th>
        <th>Title</th>
        <th>Service</th>
        <th></th>
    </tr>
    {{#each projects}}
        <tr>
            <td>
                <img class="small-img" src="/images/portfolio/{{image}}">
            </td>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{service}}</td>
            <td>
                <a href="/admin/edit/{{id}}" class="button default">Edit</a>
                <a href="/admin/delete/{{id}}" data-id = "{{id}}" class="button alert delete-project">Delete</a>
            </td>
        </tr>
    {{/each}}
</table>
{{else}}
    <p>No projects</p>
{{/if}}